@model AWEElectronics.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<div class="row">
    <!-- Left: Product Details -->
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">Product Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Product Group</dt>
            <dd class="col-sm-10">@Model.ProductGroupName</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">$@Model.Price.ToString("F2")</dd>

            <dt class="col-sm-2">Availability</dt>
            <dd class="col-sm-10">@Model.Availability</dd>
        </dl>

        <form method="post" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-success">Add to Cart</button>
            <a href="~/" class="btn btn-secondary ml-2">Back to List</a>
        </form>
    </div>

    <!-- Right: Product Image -->
    <div class="col-md-8 text-center">
        @if (Model.ImageBytes != null)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.ImageBytes)"
                 class="img-fluid rounded border" alt="Product Image" />
        }
        else
        {
            <p>No image uploaded</p>
        }
    </div>
</div>
